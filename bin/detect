#!/usr/bin/env bash

set -euo pipefail

BUILD_DIR="${1}"

gradle_files=(
	"gradlew"
	"build.gradle"
	"build.gradle.kts"
	"settings.gradle"
	"settings.gradle.kts"
)

for gradle_file in "${gradle_files[@]}"; do
	if [[ -f "${BUILD_DIR}/${gradle_file}" ]]; then
		echo "Gradle"
		exit 0
	fi
done

(>&2 echo "Could not find a Gradle project! Please check that you have a gradlew script or build.gradle(.kts) file and that they are committed to Git.")
exit 1
